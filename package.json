{
  "name": "glitchtip-mcp",
  "version": "1.0.1",
  "description": "MCP server for GlitchTip error monitoring integration",
  "type": "module",
  "bin": {
    "glitchtip-mcp": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "keywords": [
    "mcp",
    "glitchtip",
    "error-monitoring",
    "debugging",
    "ai-tools"
  ],
  "author": "Vlad Tansky",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2",
    "dotenv": "^17.2.3",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^24.0.6",
    "typescript": "^5.8.3"
  }
}
